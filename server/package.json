{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "yarn clean && yarn build && cd dist/functions &&  firebase use agromall-d819e; firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "watch": "babel --watch src --out-dir dist --source-maps inline --copy-files",
    "build": "babel --presets=@babel/preset-env src --out-dir dist --source-maps inline --copy-files",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "clean": "rm -rf 'dist/functions'",
    "watch-funcs": "babel --presets=@babel/preset-env  --verbose -w src/functions --out-dir dist/functions"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.2.0"
  },
  "private": true
}
